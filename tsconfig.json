{
  "include": ["src", "types"],
  "exclude": ["./node_modules", "./dist"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "checkJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./build/types",
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}
